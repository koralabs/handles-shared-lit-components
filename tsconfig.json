{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "outDir": "./lib",
        "lib": ["ESNext", "dom"],
        "declaration": true,
        "checkJs": true,
        "declarationMap": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "types": ["react"],
        "plugins": [
            {
                "name": "ts-lit-plugin",
                "strict": true
            }
        ]
    }
}
